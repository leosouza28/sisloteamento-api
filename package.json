    "body-parser": "^2.2.0",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.1",
    "firebase-admin": "^13.2.0",
    "handlebars": "^4.7.8",
    "jwt-simple": "^0.5.6",
    "mongoose": "^8.13.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.3",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.4",
    "uuid": "^11.1.0"
  },
