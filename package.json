  "scripts": {
    "build": "babel lib --extensions \".ts,.tsx\" --out-dir dist ; node copy-files.js",
    "dev": "cross-env DEV=1 TZ=utc ts-node-dev --respawn --files lib/index.ts",
    "dev:tasks": "cross-env DEV=1 TZ=utc ts-node-dev --respawn --files lib/tasks.ts",
    "commit": "git add . ; git commit -m auto ; npm version patch ; git push origin main",
    "update": "git reset --hard && git pull ; npm i ; npm run build ; pm2 stop all ; pm2 delete all ; pm2 start ecosystem.config.js --env production ; pm2 save ;",
    "type-check": "tsc --noEmit",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/nodemailer": "^6.4.17",
