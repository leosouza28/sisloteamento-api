    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-fileupload": "^1.5.1",
    "@types/jwt-simple": "^0.5.36",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.13.14",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "glob": "^11.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
