<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Título da Página -->
    <title>{{titulo}}</title>

    <!-- Meta Description (SEO) -->
    <meta name="description" content="{{descricao_seo}}" />

    <!-- Open Graph (Facebook, LinkedIn, WhatsApp) -->
    <meta property="og:title" content="{{titulo}}" />
    <meta property="og:description" content="{{descricao_seo}}" />
    <meta property="og:image" content="{{imagem_seo}}" />
    <meta property="og:url" content="{{{url}}}" />
    <meta property="og:type" content="website" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{titulo}}" />
    <meta name="twitter:description" content="{{descricao_seo}}" />
    <meta name="twitter:image" content="{{imagem_seo}}" />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            --primary: #00c2c1;
            --secondary: #0e245c;
            --success: #00c6ac;
            --danger: #e84c1a;
            --warning: #f6c544;
            --info: #4ddce8;
            --light: #ffffff;
            --dark: #1c2c4c;
        }

        body {
            font-family: 'Arial', sans-serif;
            color: var(--dark);
            background-color: var(--light);
        }

        .hero-section {
            background-color: var(--secondary);
            color: var(--light);
            padding: 5rem 0;
        }

        .hero-section h1 {
            font-size: 2.8rem;
            font-weight: bold;
        }

        .card-plan {
            border: 1px solid #eee;
            border-radius: 16px;
            transition: transform 0.3s;
        }

        .card-plan:hover {
            transform: scale(1.03);
            box-shadow: 0 0 20px rgba(0, 194, 193, 0.3);
        }

        .card-plan .card-body {
            padding: 2rem;
        }

        .highlight {
            border: 2px solid var(--primary);
        }

        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary);
            font-size: 1.2rem;
            padding: 0.75rem;
            border-radius: 8px;
        }

        .form-section {
            background-color: #f8f9fa;
            padding: 5rem 0;
        }

        ul {
            list-style: none;
            padding-left: 0;
        }

        ul li::before {
            content: "✔️";
            color: var(--success);
            margin-right: 0.5rem;
        }

        label {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .form-control,
        .form-select {
            border-radius: 8px;
        }

        .card-title {
            color: var(--secondary);
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .lead {
            font-size: 1.25rem;
        }
    </style>
</head>

<body>

    <!-- Hero Section -->
    <section class="hero-section text-center">
        <div class="container">
            <h1 class="display-5 fw-bold">Garanta seu Passaporte!</h1>
            <p class="lead">Escolha o plano ideal para você e tenha acesso exclusivo durante o período escolhido.</p>
        </div>
    </section>

    <!-- Planos -->
    <section class="py-5 my-5">
        <div class="container">
            <div class="row g-4 justify-content-center">
                {{#each planos}}
                <div class="col-12 col-lg-4">
                    <div class="card card-plan h-100 shadow-sm {{#if destaque}}highlight{{/if}}">
                        <div class="card-body">
                            <h4 class="card-title text-center">{{nome}}</h4>
                            <h5 class="card-title text-center">{{categoria}}</h5>
                            <ul class="mb-4 border-bottom border-top py-3">
                                {{#each vantagens}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                            <div class="d-flex flex-row justify-content-between mb-2">
                                <span>Taxa de adesão</span>
                                <strong>R${{valor_adesao_brl}}</strong>
                            </div>
                            <div class="d-flex flex-row justify-content-between mb-2">
                                <span>Passaporte</span>
                                <strong>R${{valor_plano_brl}}</strong>
                            </div>
                            <div class="d-flex flex-row justify-content-between mb-3 fs-5">
                                <span>Investimento total</span>
                                <strong>R${{valor_total_brl}}</strong>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    <!-- Formulário -->
    <section class="form-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-4 text-center">Preencha seus dados e fale conosco!</h5>
                            <form id="captureForm">
                                <div class="mb-3">
                                    <label for="nome" class="form-label">Nome</label>
                                    <input type="text" class="form-control" id="nome" name="nome"
                                        placeholder="Seu nome completo" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">E-mail</label>
                                    <input type="email" class="form-control" id="email" name="email"
                                        placeholder="Seu e-mail" required>
                                </div>
                                <div class="mb-3">
                                    <label for="telefone" class="form-label">Telefone</label>
                                    <input type="tel" class="form-control" id="telefone" name="telefone"
                                        placeholder="(00) 00000-0000" required>
                                </div>
                                <div class="mb-3">
                                    <label for="cidade" class="form-label">Cidade</label>
                                    <input type="text" class="form-control" id="cidade" name="cidade"
                                        placeholder="Sua cidade" required>
                                </div>
                                <div class="mb-3">
                                    <label for="plano" class="form-label">Escolha o plano</label>
                                    <select class="form-select" id="plano" name="plano" required>
                                        <option value="" disabled selected>Selecione um plano</option>
                                        {{#each planos}}
                                        <option value="{{nome}}-{{categoria}}">{{nome}} - {{categoria}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const campaignUrl = window.location.href;

            // PUT para /campaign/contador ao carregar a página
            fetch('/campaign/contador', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ campaign_url: campaignUrl })
            }).catch(err => console.error('Erro contador:', err));

            // Mascara telefone (JS puro)
            const telefoneInput = document.getElementById('telefone');
            telefoneInput.addEventListener('input', function (e) {
                let value = e.target.value.replace(/\D/g, ''); // Remove tudo que não for número

                if (value.length > 11) value = value.slice(0, 11); // Limita a 11 dígitos (celular com DDD)

                if (value.length > 10) {
                    value = value.replace(/^(\d{2})(\d{5})(\d{4}).*/, '($1) $2-$3');
                } else if (value.length > 6) {
                    value = value.replace(/^(\d{2})(\d{4})(\d{0,4}).*/, '($1) $2-$3');
                } else if (value.length > 2) {
                    value = value.replace(/^(\d{2})(\d{0,5})/, '($1) $2');
                } else {
                    value = value.replace(/^(\d*)/, '($1');
                }

                e.target.value = value;
            });

            // Formulário
            const form = document.getElementById('captureForm');
            const submitButton = form.querySelector('button[type="submit"]');

            form.addEventListener('submit', function (e) {
                e.preventDefault();

                submitButton.disabled = true;
                submitButton.innerText = 'Enviando...';

                const formData = {
                    campaign_url: campaignUrl,
                    nome: document.getElementById('nome').value,
                    email: document.getElementById('email').value,
                    telefone: document.getElementById('telefone').value,
                    cidade: document.getElementById('cidade').value,
                    plano: document.getElementById('plano').value,
                };

                fetch('/campaign/capture', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                })
                    .then(response => {
                        if (response.ok) {
                            alert('Dados enviados com sucesso!');
                            form.reset();
                        } else {
                            alert('Erro ao enviar os dados.');
                        }
                    })
                    .catch(err => {
                        console.error('Erro envio:', err);
                        alert('Erro ao enviar os dados.');
                    })
                    .finally(() => {
                        submitButton.disabled = false;
                        submitButton.innerText = 'Enviar';
                    });
            });
        });
    </script>


</body>

</html>